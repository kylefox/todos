<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">My Todos</h1>
  
  <div class="space-y-2">
    <% if @todos.empty? %>
      <div class="text-center py-12">
        <p class="text-gray-500 mb-4">No todos yet. Create your first todo to get started!</p>
      </div>
    <% else %>
      <% @todos.each do |todo| %>
        <div class="card bg-base-100 shadow-sm">
          <div class="card-body">
            <p>Todo item will go here</p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
